<!doctype html>
<html>
  <head>
    <title><%= shopName %> - Register</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Register</h1>
    </header>

    <section class="form-card">
      <form method="POST" action="/registered">
        <label>First Name:</label>
        <input id="first" type="text" name="first" pattern="[A-Za-z\s'-]+" required />

        <label>Last Name:</label>
        <input id="last" type="text" name="last" pattern="[A-Za-z\s'-]+" required />

        <label>Email:</label>
        <input id="email" type="email" name="email" required />

        <button type="submit">Register</button>
      </form>
    </section>

    <footer>
      <a href="/">Home</a> |
      <a href="/about">About</a> |
      <a href="/search">Search</a>
    </footer>
  </body>
</html>

