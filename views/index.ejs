<!doctype html>
<html>
  <head>
    <title><%= shopName %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="hero">
      <div class="hero-text">
        <h1>Welcome to <%= shopName %></h1>
        <p>Your one-stop shop for all your favourite drinks near Goldsmiths University.</p>
        <a href="/about" class="btn-primary">Explore Our Shops</a>
      </div>
    </header>

    <section class="product-section">
      <h2>What We Sell</h2>
      <div class="product-grid">
        <% for (let i = 0; i < productCategories.length; i++) { %>
          <div class="product-card">
            <h3><%= productCategories[i] %></h3>
            <p>Discover our refreshing range of <%= productCategories[i].toLowerCase() %>.</p>
          </div>
        <% } %>
      </div>
    </section>

    <section class="cta-section">
      <h2>Get Involved</h2>
      <div class="cta-grid">
        <a href="/search" class="cta-card">
          <h3>Search Products</h3>
          <p>Find exactly what you're thirsty for.</p>
        </a>
        <a href="/register" class="cta-card">
          <h3>Register</h3>
          <p>Sign up to get special offers and discounts.</p>
        </a>
        <a href="/survey" class="cta-card">
          <h3>Customer Survey</h3>
          <p>Tell us what you love (and what youâ€™d improve).</p>
        </a>
      </div>
    </section>

    <footer>
      <a href="/">Home</a> |
      <a href="/about">About</a> |
      <a href="/register">Register</a> |
      <a href="/survey">Survey</a>
    </footer>
  </body>
</html>


